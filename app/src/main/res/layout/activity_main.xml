<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1E1E2E">

    <EditText
        android:id="@+id/commandInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="shell@onow:~$"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:background="#2A2D40"
        android:padding="8dp"/>

    <Button
        android:id="@+id/executeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Executar Comando"
        android:layout_marginTop="8dp"
        android:backgroundTint="#444466"/>

    <Button
        android:id="@+id/selectFileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecionar Script"
        android:layout_marginTop="8dp"
        android:backgroundTint="#444466"/>

    <Button
        android:id="@+id/executeScriptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Executar Script"
        android:layout_marginTop="8dp"
        android:backgroundTint="#444466"/>

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="#00FF7F"
        android:background="#1A1A1E"
        android:gravity="top"/>

</LinearLayout> 